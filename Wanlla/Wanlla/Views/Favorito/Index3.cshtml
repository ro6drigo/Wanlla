@model List<Modelo.favorito>
@{
    ViewBag.Title = "Favoritos";
}
<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm("Index", "Favoritos", FormMethod.Post, new { @class = "form-inline", id = "form-dieta" }))
        {
            <div class="form-group">
                <label class="sr-only" for="buscar">Buscar</label>
                <div class="input-group">
                    @Html.TextBox("buscar", null, new { type = "search", @class = "form-control", placeholder = "Ingrese nombre", id = "buscar", autocomplete = "off" })
                    <div class="input-group-addon"><a href="javascript: document.getElementById('form-dieta').submit();"><span class="fa fa-search"></span></a></div>
                </div>
            </div>
        }
    </div>
</div>

<br>

@if (Model.Count == 0)
{
    <div class="text-center">
        Sin Favoritos
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center">
            <thead>
                <tr>
                    <th class="text-center">ID Usuario</th>
                    <th class="text-center">ID Receta</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@(m.id_usuario)</td>
                        <td>@(m.id_receta)</td>
                        <td>@(m.receta.nom_receta)</td>
                        <td>
                            <table class="text-center" style="width:100%;">
                                <tr>
                                    <td><a href="~/Favorito/Detalle/@(m.id_usuario)" data-toggle="tooltip" data-placement="bottom" title="Detalle"><span class="fa fa-eye os-ac-icon os-hover-yellow"></span></a></td>
                                    <td><a href="~/Favorito/Mantenimiento/@(m.id_usuario)" data-toggle="tooltip" data-placement="bottom" title="Editar"><span class="fa fa-pencil os-ac-icon os-hover-green"></span></a></td>
                                    <td><a onclick="return confirm('¿Si elimina la dieta @(m.id_usuario), perderá todas las recetas guardadas?');" href="~/Dieta/Eliminar/@(m.id_usuario)" data-toggle="tooltip" data-placement="bottom" title="Eliminar"><span class="fa fa-trash os-ac-icon os-hover-red"></span></a></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}