@model Modelo.marca
@{
    ViewBag.Title = (Model.id_marca > 0 ? Model.nom_marca : "Nueva Marca");
}

@using (Html.BeginForm("Guardar", "marca", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(x => x.id_marca);
    <div class="form-group">
        <label for="nom_marca" class="col-sm-4 control-label hidden-xs"><span class="fa fa-linux fa-2x" aria-hidden="true"></span></label>
        <label for="nom_marca" class="col-sm-4 control-label visible-xs">Nombre</label>
        <div class="col-sm-4">
            @Html.TextBoxFor(x => x.nom_marca, new { type = "text", @class = "form-control", placeholder = "Nombre" })
            @Html.ValidationMessageFor(x => x.nom_marca, null, new { @class = "label label-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-danger" onclick="javascript:history.back()">Cancelar</button>
        </div>
    </div>
}