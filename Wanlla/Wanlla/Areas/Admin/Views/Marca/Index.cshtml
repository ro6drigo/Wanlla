@model List<Modelo.marca>
@{
    ViewBag.Title = "Marcas";
}
@using (Html.BeginForm("Index", "Marca", FormMethod.Post, new { criterio = "frm-buscar" }))
{
    <div class="row">
        <div class="col-sm-5 text-left">
            @Html.TextBox("criterio",null,new { type = "text", @class = "form-control", placeholder = "Ingrese marca" })
        </div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> Buscar</button>
        </div>
        <div class="col-sm-4 text-right">
            <a class="btn btn-info" href="~/Admin/Marca/Mantenimiento/0" role="button"><i class="fa fa-plus"></i> Nueva Marca</a>
        </div>
    </div>

}
<hr />
<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead>
            <tr>
                <th class="text-center">#</th>
                <th class="text-center">Marca</th>
                <th class="text-center">Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.id_marca</td>
                    <td>@m.nom_marca</td>
                    <td>
                        <a class="btn btn-success" href="~/Admin/Marca/Mantenimiento/@m.id_marca"><i class="fa fa-pencil fa-lg"></i> Modificar</a>
                        <a onclick="return confirm('¿Está seguro de eliminar el registro?');" href="~/Admin/Marca/Eliminar/@m.id_marca" class="btn btn-danger">
                        <i class="fa fa-trash-o fa-lg"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>