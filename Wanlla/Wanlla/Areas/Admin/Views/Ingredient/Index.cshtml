@model List<Modelo.ingrediente>
@{
    ViewBag.Title = "Ingredientes";
}

@using (Html.BeginForm("Index", "Ingredient", FormMethod.Post, new { criterio = "frm-buscar" }))
{
    <div class="row">
        <div class="col-sm-5 text-left">
            @Html.TextBox("criterio", null, new { type = "text", @class = "form-control", placeholder = "Ingrese dato a buscar" })
        </div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-lg btn-default fa fa-search" data-toggle="tooltip" title="Buscar"></button>
        </div>
        <div class="col-sm-4 text-right">
            <a class="btn btn-lg btn-success fa fa-plus" href="~/Admin/Ingredient/Mantenimiento/0" role="button" data-toggle="tooltip" title="Nuevo Ingrediente"></a>
        </div>
    </div>
}
<hr />
<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead>
            <tr>
                <th class="text-center">#</th>
                <th class="text-center">Ingrediente</th>
                <th class="text-center">Tipo</th>
                <th class="text-center">Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.id_ingrediente</td>
                    <td>@m.nom_ingrediente</td>
                    <td>@m.tipo_ingrediente</td>
                    <td>
                        <table class="text-center" style="width:100%;">
                            <tr>
                                <td><a href="~/Admin/Categoria/Detalle/@m.id_ingrediente" data-toggle="tooltip" data-placement="bottom" title="Ver Detalle"><span class="fa fa-eye os-ac-icon os-hover-yellow"></span></a></td>
                                <td><a href="~/Admin/Categoria/Mantenimiento/@m.id_ingrediente" data-toggle="tooltip" data-placement="bottom" title="Editar"><span class="fa fa-pencil os-ac-icon os-hover-green"></span></a></td>
                                <td><a onclick="return confirm('¿Está seguro de eliminar el registro?');" href="~/Admin/Categoria/Eliminar/@m.id_ingrediente" data-toggle="tooltip" data-placement="bottom" title="Eliminar"><span class="fa fa-trash os-ac-icon os-hover-red"></span></a></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<script>
$(function () {
    $('[data-toggle="tooltip"]').tooltip()
})
</script>