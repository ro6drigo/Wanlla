@{
    ViewBag.Title = "Reportes y Consultas";
}
<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead>
            <tr>
                <th class="text-center">Tema</th>
                <th class="text-center">Tipo de Gráfico</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Favoritos</td>
                <td>
                    <table class="text-center" style="width:100%;">
                        <tr>
                            <td><a href="~/Admin/Reportes/FavoritosPie" data-toggle="tooltip" data-placement="bottom" title="Gráfico de Pie">
                                <span class="fa fa-pie-chart os-ac-icon os-hover-green"></span></a></td>
                            <td>
                                <a href="~/Admin/Reportes/FavoritosDonut" data-toggle="tooltip" data-placement="bottom" title="Gráfico de Dona">
                                    <span class="fa fa-circle-o-notch os-ac-icon os-hover-red"></span>
                                </a>
                            </td>
                            <td><a href="~/Admin/Reportes/FavoritosBar" data-toggle="tooltip" data-placement="bottom" title="Gráfico de Barras">
                                <span class="fa fa-bar-chart os-ac-icon os-hover-blue"></span></a></td>
                        </tr>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</div>