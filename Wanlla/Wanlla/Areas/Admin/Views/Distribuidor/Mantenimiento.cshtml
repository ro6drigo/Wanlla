@model Modelo.distribuidor
@{
    ViewBag.Title = (Model.id_distribuidor > 0 ? Model.nom_distribuidor : "Nuevo Distribuidor");
}

@using (Html.BeginForm("Guardar", "distribuidor", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(x => x.id_distribuidor);
    <div class="form-group">
        <label for="nom_distribuidor" class="col-sm-4 control-label hidden-xs"><i class="fa fa-linux fa-2x" aria-hidden="true"></i></label>
        <label for="nom_distribuidor" class="col-sm-4 control-label visible-xs">Distribuidor</label>
        <div class="col-sm-4">
            @Html.TextBoxFor(x => x.nom_distribuidor, new { type = "text", @class = "form-control", placeholder = "Distribuidor" })
            @Html.ValidationMessageFor(x => x.nom_distribuidor, null, new { @class = "label label-danger" })
        </div>
    </div>
    <div class="form-group">
        <label for="email_distribuidor" class="col-sm-4 control-label hidden-xs"><i class="fa fa-envelope-o fa-2x" aria-hidden="true"></i></label>
        <label for="email_distribuidor" class="col-sm-4 control-label visible-xs">E-Mail</label>
        <div class="col-sm-4">
            @Html.TextBoxFor(x => x.email_distribuidor, new { type = "text", @class = "form-control", placeholder = "E-mail" })
            @Html.ValidationMessageFor(x => x.email_distribuidor, null, new { @class = "label label-danger" })
        </div>
    </div>
    <div class="form-group">
        <label for="tel_distribuidor" class="col-sm-4 control-label hidden-xs"><i class="fa fa-phone fa-2x" aria-hidden="true"></i></label>
        <label for="tel_distribuidor" class="col-sm-4 control-label visible-xs">Distribuidor</label>
        <div class="col-sm-4">
            @Html.TextBoxFor(x => x.tel_distribuidor, new { type = "text", @class = "form-control", placeholder = "Teléfono" })
            @Html.ValidationMessageFor(x => x.tel_distribuidor, null, new { @class = "label label-danger" })
        </div>
    </div>
    <div class="form-group">
        <label for="tel_distribuidor" class="col-sm-4 control-label hidden-xs"><i class="fa fa-arrows-v fa-2x" aria-hidden="true"></i></label>
        <label for="tel_distribuidor" class="col-sm-4 control-label visible-xs">Estado</label>
        <div class="col-sm-4">
            <select name="estado" class="form-control">
                <option @(Model.estado_distribuidor == "Activo" ? "selected" : "") value="Activo">Activo</option>
                <option @(Model.estado_distribuidor == "Inactivo" ? "selected" : "") value="Inactivo">Inactivo</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="button" class="btn btn-danger" onclick="javascript:history.back()">Cancelar</button>
        </div>
    </div>
}